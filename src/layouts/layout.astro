---
import "../styles.css"
import ToastProvider from "../components/ToastProvider"
import WhatsappButton from "../components/whatsappButton.astro"

const pathname = Astro.url.pathname;


const excludeRoutes = [
  "/cart",
  "/checkout",
  "/compraConfirmada",
  "/admin",
];

const shouldShowWhatsapp = !excludeRoutes.some((route) =>
  pathname.startsWith(route)
);

---
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content="Astro" />
    <title>Domingo Verde</title>
    <link rel="icon" type="image/png" href="/favicon_opt.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300..700&family=Space+Grotesk:wght@300..700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
    />
  </head>

  <body>
      <slot />
      {shouldShowWhatsapp && <WhatsappButton />}
      <ToastProvider client:load />
  </body>
</html>
